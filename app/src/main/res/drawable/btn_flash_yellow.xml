<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
         <layer-list>
            <item>
                <shape>
		            <solid
		                android:color="#f3ae1b" />
		            <stroke
		                android:width="1dp"
		                android:color="#bb6008" />
		            <corners
		                android:radius="3dp" />
		            <padding
		                android:left="1dp"
		                android:top="10dp"
		                android:right="1dp"
		                android:bottom="10dp" />
		        </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/flashlight_icon"/>
            </item>
            
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
		        <shape>
		            <gradient
		                android:startColor="#f3ae1b"
		                android:endColor="#bb6008"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#bb6008" />
		            <corners
		                android:radius="4dp" />
		            <padding
		                android:left="1dp"
		                android:top="10dp"
		                android:right="1dp"
		                android:bottom="10dp" />
		        </shape>
		    </item>
		    <item>
                <bitmap android:gravity="center" android:src="@drawable/flashlight_icon"/>
            </item>
        	
        </layer-list>     
    </item>
</selector>