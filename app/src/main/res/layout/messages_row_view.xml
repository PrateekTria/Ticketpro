<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_listview"
    android:orientation="vertical"
    android:padding="5dp" >
   
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       
       <TextView
           android:id="@+id/title_textview"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="start"
           android:text="Title"
           android:padding="@dimen/_2dp"
           android:textColor="#FFF"
           android:textSize="@dimen/xxsmall_font_size" />
       
   </LinearLayout>
   
    <TextView
        android:id="@+id/messages_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2dp"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Messsages"
        android:textColor="#FFF"
        android:textSize="@dimen/xxxxsmall_font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/from_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:text="Date"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="@dimen/xxxxsmall_font_size" />

        <TextView
            android:id="@+id/to_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:gravity="end"
            android:text="Date"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="@dimen/xxxxsmall_font_size" />
    </LinearLayout>

</LinearLayout>