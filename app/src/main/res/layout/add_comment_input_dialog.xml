<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_screen"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_footer"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/add_comment_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Add New Comment"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox
            android:id="@+id/add_comment_private_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Private"
            android:textColor="#fff" />
    </LinearLayout>

    <EditText
        android:id="@+id/add_comment_input_dialog_text_field"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_3dp"
        android:layout_marginRight="@dimen/_3dp"
        android:layout_height="150dp"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|top"
        android:hint="Comment Text (Max - 32 Chars)"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textCapCharacters|textMultiLine"
        android:lines="6"
        android:isScrollContainer="false"
        android:maxLines="5"
        android:minLines="3"
        android:singleLine="false"
        android:scrollbarSize="@dimen/_3dp"
        android:scrollbarStyle="insideOverlay"
        android:layout_marginLeft="@dimen/_3dp"
        android:layout_marginEnd="@dimen/_3dp">
<requestFocus /></EditText>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_comment_input_dialog_cancel_btn"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn_yellow"
            android:padding="10dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/add_comment_input_dialog_enter_btn"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_blue"
            android:padding="10dp"
            android:text="Done" />
    </RelativeLayout>

</LinearLayout>
