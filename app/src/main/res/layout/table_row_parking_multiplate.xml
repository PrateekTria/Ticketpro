<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_row_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_listview"
    android:padding="1dp">

    <ImageView
        android:id="@+id/tr_status_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="2dp" />

    <TextView
        android:id="@+id/tr_header2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:paddingBottom="8dp"
        android:paddingStart="7dp"
        android:paddingEnd="1dp"
        android:paddingTop="8dp"
        android:gravity="center"
        android:text="ABC1234"
        android:textColor="#fff"
        android:layout_gravity="start"
        android:textSize="@dimen/xxxxxsmall_font_size" />
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:orientation="horizontal" >
		
       <TextView
           android:id="@+id/tr_header3"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:paddingBottom="8dp"
           android:paddingStart="2dp"
           android:paddingEnd="2dp"
           android:gravity="center"
           android:paddingTop="8dp"
           android:text="11 H 35 M ago"
           android:layout_gravity="start"
           android:textColor="#fff"
           android:textSize="@dimen/xxxxxsmall_font_size" />

        <ImageButton
            android:id="@+id/tr_action"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_lot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="TRANSIT 10 HR"
        android:layout_gravity="start"
        android:textSize="@dimen/xxxxxsmall_font_size"
        android:paddingStart="7dp"
        android:paddingEnd="1dp" />

</TableRow>