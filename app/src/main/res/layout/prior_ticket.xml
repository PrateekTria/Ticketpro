<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<androidx.viewpager.widget.ViewPager
	    android:id="@+id/pager"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginBottom="60dp" 
	>
		<androidx.viewpager.widget.PagerTabStrip
	        android:id="@+id/pager_tab_strip"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:layout_gravity="bottom"
	        android:background="@drawable/btn_yellow"
	        android:textColor="#fff"
	        android:padding="4dp" />
		
	</androidx.viewpager.widget.ViewPager>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/background_footer"
	    android:padding="5dp" >

	    <Button
		    android:id="@+id/prior_tkt_first_btn"
		    style="@style/ButtonText"
		    android:layout_width="wrap_content"
		    android:layout_height="@dimen/small_button_height" 
		    android:layout_centerVertical="true"
		    android:background="@drawable/btn_yellow" 
		    android:text="First"
		    android:textColor="#fff" />
	    
		<Button
		    android:id="@+id/prior_tkt_back_btn"
		    style="@style/ButtonText"
		    android:layout_width="wrap_content"
		    android:layout_height="@dimen/small_button_height"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/btn_yellow" 
		    android:text="Back"
		    android:textColor="#fff"  />
		
		<Button
		    android:id="@+id/prior_tkt_last_btn"
		    style="@style/ButtonText"
		    android:layout_width="wrap_content"
		    android:layout_height="@dimen/small_button_height"
		    android:layout_alignParentEnd="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/btn_yellow"
		    android:text="Last"
		    android:textColor="#fff"  />
		
		
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_centerInParent="true">
		
		    <Button
			    android:id="@+id/plate_lookup_action_btn"
			    style="@style/ButtonText"
			    android:layout_width="wrap_content"
			    android:layout_height="@dimen/small_button_height"
			    android:background="@drawable/btn_blue"
			    android:onClick="actionAction"
			    android:text="Action"
			    android:visibility="gone"
			    android:textColor="#fff" />
			
			<Button
			    android:id="@+id/plate_lookup_check_plate_btn"
			    style="@style/ButtonText"
			    android:layout_width="wrap_content"
			    android:layout_height="@dimen/small_button_height"
			    android:background="@drawable/btn_blue"
			    android:onClick="checkPlateAction"
			    android:text="Check Plate"
			    android:textColor="#fff"
			    android:visibility="gone" />
			
			<Button
			    android:id="@+id/plate_lookup_send_email_btn"
			    style="@style/ButtonText"
			    android:layout_width="wrap_content"
			    android:layout_height="@dimen/small_button_height"
			    android:background="@drawable/btn_blue"
			    android:onClick="sendEmailAction"
			    android:text="Email"
			    android:textColor="#fff"
			    android:visibility="gone" />
		
		</LinearLayout>
		
	</RelativeLayout>

</RelativeLayout>
